<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoverPass.Views.NewItemPage"
             Shell.PresentationMode="ModalAnimated"
             BackgroundColor="Black"
             Title="New Class">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Class Name:" FontSize="Large" TextColor="White"/>
            <Entry Text="{Binding ClassName, Mode=TwoWay}" FontSize="Medium" BackgroundColor="White" />
            <Label Text="Teacher:" FontSize="Large" TextColor="White"/>
            <Entry Text="{Binding Teacher, Mode=TwoWay}" FontSize="Medium" BackgroundColor="White" />
            <Label Text="Block" FontSize="Large" TextColor="White"/>
            <Entry Text="{Binding Block, Mode=TwoWay}" FontSize="Medium" BackgroundColor="White" />
            
            
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}" TextColor="Black"  BackgroundColor="White" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Save" Command="{Binding SaveCommand}" BackgroundColor="White" TextColor="Black"   HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
