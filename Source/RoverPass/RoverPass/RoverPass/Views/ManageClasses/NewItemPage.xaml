<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoverPass.Views.NewItemPage"
             Shell.PresentationMode="ModalAnimated"
             BackgroundColor="{DynamicResource Red}"
             Title="New Class">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Enter a Class Code" FontSize="Large" TextColor="White"/>
            <Entry Text="{Binding Text, Mode=TwoWay}" FontSize="Medium" BackgroundColor="White" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}" TextColor="Black"  BackgroundColor="White" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Save" Command="{Binding SaveCommand}" TextColor="Black"  BackgroundColor="White" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
